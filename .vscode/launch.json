{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Metro",
      "request": "attach",
      "type": "reactnative",
      "cwd": "${workspaceFolder}",
      "port": 8081
    },
    {
      "name": "Debug Android",
      "type": "reactnative",
      "request": "launch",
      "platform": "android",
      "cwd": "${workspaceFolder}",
      "enableDebug": true,
      "target": "emulator"
    },
    {
      "name": "Debug iOS",
      "type": "reactnative",
      "request": "launch", 
      "platform": "ios",
      "cwd": "${workspaceFolder}",
      "enableDebug": true,
      "target": "simulator"
    },
    {
      "name": "Debug Web",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/expo",
      "args": ["start", "--web"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}